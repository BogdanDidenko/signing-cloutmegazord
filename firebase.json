{
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix ./functions/ install",
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix ./functions/ run start"
    ],
    "source": "functions"
  },
  "emulators": {
    "functions": {
      "port": 8800
    },
    "hosting": {
      "port": 7000
    },
    "database": {
      "port": 10000
    },
    "ui": {
      "enabled": true,
      "port": 11000
    }
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [{
      "source": "/ts/**",
      "function": "taskSessions"
    }]
  }
}
